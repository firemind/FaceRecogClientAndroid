<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/test_image"
            android:layout_width="@dimen/image_preview_width"
            android:layout_height="@dimen/image_preview_heigth"
            android:adjustViewBounds="true"
            android:contentDescription="@string/person"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/test_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/test_image"
            app:layout_constraintTop_toBottomOf="@+id/test_image"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/prediction_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:layout_constraintLeft_toRightOf="@+id/test_image"
            app:layout_constraintRight_toLeftOf="@+id/prediction_image"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintTop_toTopOf="@+id/prediction_image"
            android:layout_marginTop="16dp" />

        <ImageView
            android:id="@+id/prediction_image"
            android:layout_width="@dimen/image_preview_width"
            android:layout_height="@dimen/image_preview_heigth"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/person"
            app:layout_constraintLeft_toRightOf="@+id/test_image"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/prediction_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/prediction_image"
            app:layout_constraintTop_toBottomOf="@+id/prediction_image"
            app:layout_constraintVertical_bias="0.0" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>